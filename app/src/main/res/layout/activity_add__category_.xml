<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Category_Activity">

    <EditText
        android:id="@+id/category_name_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:hint="write category Name..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/category_lat_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:hint="write category latitude..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/category_lng_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:hint="write category longitude..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/category_type_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:hint="write category type..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/category_rate_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"
        android:hint="write category rate..."
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_save_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save category"
        android:layout_marginTop="450dp"/>


    <Button
        android:id="@+id/btn_show_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="show category"
        android:layout_marginTop="530dp"/>



</RelativeLayout>
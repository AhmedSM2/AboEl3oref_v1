<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Area_Activirt">

    <EditText
        android:id="@+id/area_name_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:hint="write Area Name..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/area_lat_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:hint="write Area latitude..."
        android:gravity="center"/>

    <EditText
        android:id="@+id/area_lng_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:hint="write Area longitude..."
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_save_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save Area"
        android:layout_marginTop="300dp"/>

    <Button
        android:id="@+id/btn_save_category_intent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="save category"
        android:layout_marginTop="400dp"/>


</RelativeLayout>